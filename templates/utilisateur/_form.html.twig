{{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Formulaire</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        {{ form_label(form.nom, null, {'label': 'Nom'}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.prenom, null, {'label': 'Prénom'}) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password, null, {'label': 'Mot de passe'}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, null, {'label': 'Email'}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.roles, null, {'label': 'Rôle'}) }}
                        {{ form_widget(form.roles, {'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}